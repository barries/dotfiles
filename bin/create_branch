#!/usr/bin/env bash

set -eu -o pipefail
shopt -s nullglob

if [[ $1 == -* ]]; then
    BRANCH_NAME=$2
else
    BRANCH_NAME=$1
fi

BRANCH_BASENAME="${BRANCH_NAME##*/}"

ROOT=`git rev-parse --show-toplevel`

WORKTREE=$(realpath $ROOT/../$BRANCH_NAME)

fetch

if [[ ! -d $WORKTREE ]]; then
    git worktree add -b $BRANCH_NAME $WORKTREE
fi

cd $WORKTREE/Station/Source

pull || true

create_new_tmux_window $BRANCH_NAME e
