#!/usr/bin/env bash

set -euo pipefail
shopt -s nullglob

EDITOR=${EDITOR:=nvim}

VIM_OPTIONS=

if [[ $# -ne 0 && $EDITOR == *"vim"* && $1 != "-d" && $1 != "-p" && $1 != "-" ]]; then
    VIM_OPTIONS="-O "
fi

if [[ $EDITOR == *"nvim"* && ! -z ${NVIM+is_set} ]]; then
    ADDITIONAL_OPTS=""
    if [[ $# -eq 0 ]]; then
        ADDITIONAL_OPTS="-cc vnew"
    fi

    nvr -cc wincmd\ p -cc "aug nvr" -cc "au nvr WinEnter * wincmd =" -c "au! nvr" $VIM_OPTIONS $ADDITIONAL_OPTS "$@"
else
    $EDITOR $VIM_OPTIONS "$@"
fi

stty sane # in case of vim crash
